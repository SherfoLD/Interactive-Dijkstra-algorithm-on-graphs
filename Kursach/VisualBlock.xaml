<UserControl x:Class="Kursach.VisualBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kursach"
             mc:Ignorable="d" 
             Width="100" Height="100" MouseDown="UserControl_MouseDown" MouseUp="UserControl_MouseUp" MouseMove="UserControl_MouseMove">

    <Grid x:Name="VB">
        <Border Background="#FFE2D2D2" BorderBrush="#FFE2D2D2" BorderThickness="10,10,10,10" CornerRadius="90,90,90,90" />
    </Grid>
</UserControl>
